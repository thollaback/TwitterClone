<div style="position: absolute; top: 25px; left: 25px;">
  <%= link_to image_tag("twitter_small.png"), root_path %>
</div>

<div style="text-align: center;">
  <h1 style="font-size: 40px;">Tweets</h1>
  <br />
</div>

<table align="center" cellpadding="10px" style="border: 1px solid black;">
  <tr style="font-weight: bold; font-size: 14px;">
    <th>Name</th>
    <th>Title</th>
    <th>Tweet</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.name %></td>
    <td><%= post.title %></td>
    <td><%= post.context %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<p style="text-align: center;"><%= link_to 'New Post', new_post_path %></p>